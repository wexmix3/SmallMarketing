{
  "name": "marketing-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "chmod +x build.sh && ./build.sh",
    "start": "next start",
    "build:ts": "node scripts/build-ts.js",
    "setup:db": "npm run build:ts && node scripts/setup-db.js",
    "setup:db:sample": "npm run build:ts && node scripts/setup-db.js --sample-data",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:chatbot": "node run-tests.js",
    "test:chatbot:unit": "jest --config=jest.config.js",
    "test:chatbot:integration": "node run-integration-tests.js",
    "test:chatbot:integration:headless": "node run-integration-tests.js --headless",
    "test:chatbot:integration:core": "node run-integration-tests.js --category=\"Core Functionality\"",
    "test:chatbot:integration:ai": "node run-integration-tests.js --category=\"Enhanced AI\"",
    "test:chatbot:integration:files": "node run-integration-tests.js --category=\"File Attachment\"",
    "test:chatbot:integration:feedback": "node run-integration-tests.js --category=\"Feedback Mechanism\"",
    "test:chatbot:integration:performance": "node run-integration-tests.js --category=\"Performance Optimization\"",
    "test:chatbot:integration:responsive": "node run-integration-tests.js --category=\"Responsive Design\"",
    "test:chatbot:integration:cross": "node run-integration-tests.js --category=\"Cross-Feature Integration\"",
    "test:chatbot:integration:report": "node run-integration-tests.js --headless --report=integration-test-report.md",
    "test:chatbot:e2e": "playwright test --config=playwright.config.js",
    "test:chatbot:performance": "node tests/performance/performance-test.js",
    "test:chatbot:accessibility": "node tests/accessibility/accessibility-test.js",
    "cypress:open": "cypress open --config-file=cypress.config.js",
    "playwright:open": "playwright test --ui",
    "chatbot:report": "node -e \"require('./run-tests.js').generateCombinedReport()\""
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.5.0",
    "next": "^15.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "twitter-api-v2": "^1.22.0",
    "swr": "^2.2.4",
    "date-fns": "^2.30.0",
    "recharts": "^2.10.3",
    "uuid": "^9.0.1",
    "next-auth": "^4.24.5",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.1",
    "@tensorflow/tfjs": "^4.17.0",
    "@tensorflow/tfjs-node": "^4.17.0",
    "openai": "^4.24.1",
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "22.14.0",
    "@types/react": "19.1.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "eslint": "^8.55.0",
    "eslint-config-next": "^15.3.0",
    "jsdom": "^24.0.0",
    "msw": "^2.2.2",
    "typescript": "5.8.3",
    "vitest": "^1.3.1",
    "@axe-core/puppeteer": "^4.7.3",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@playwright/test": "^1.36.1",
    "babel-jest": "^29.6.1",
    "chrome-launcher": "^0.15.2",
    "cypress": "^12.17.2",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "lighthouse": "^10.3.0",
    "puppeteer": "^20.8.2"
  }
}
